<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <navigation-rule>  
        <description>Register a new user</description>  
        <from-view-id>/user-registration.xhtml</from-view-id>  
        <navigation-case>  
            <from-action>#{registrationBean.register}</from-action>  
            <from-outcome>REGISTRATION_SUCCESFUL</from-outcome>  
            <to-view-id>/logged-in/registration-succesful.xhtml</to-view-id>  
        </navigation-case>  
        <navigation-case>  
            <from-action>#{registrationBean.register}</from-action>  
            <from-outcome>REGISTRATION_UNSUCCESFUL</from-outcome>  
            <to-view-id>/logged-in/registration-unsuccesful.xhtml</to-view-id>  
        </navigation-case>
        <navigation-case>  
            <from-action>#{registrationBean.register}</from-action>  
            <from-outcome>REGISTRATION_UNSUCCESFUL_RELOG</from-outcome>  
            <to-view-id>/logged-in/registration-unsuccesful-relog.xhtml</to-view-id>  
        </navigation-case>      
    </navigation-rule>
    <navigation-rule>  
        <description>Unregister</description>  
        <from-view-id>/logged-in/user-profile-change.xhtml</from-view-id>  
        <navigation-case>  
            <from-action>#{userProfileChangeBean.unregister}</from-action>  
            <from-outcome>LOGOUT</from-outcome>  
            <to-view-id>/login.xhtml</to-view-id>  
        </navigation-case>      
    </navigation-rule>
    
</faces-config>
