<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>paypal-authtoken</param-name>
        <param-value>rc0yWBLErmCUJFo53aVVnhuo6-uwrAn9nSkl41jlIRG5ScbhTdvvSlPb4-i</param-value>
    </context-param>
    <context-param>
        <param-name>paypal-posturl</param-name>
        <param-value>https://www.sandbox.paypal.com/cgi-bin/webscr</param-value>
    </context-param>
    <context-param>
        <param-name>paypal-business</param-name>
        <param-value>labanorodraugai@gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>paypal-returnurl</param-name>
        <param-value>http://localhost:8080/DT.ReservationSystem/logged-in/payments/yearly-members-fee.xhtml</param-value>
    </context-param>
    <filter>
        <filter-name>Authentication</filter-name>
        <filter-class>DT.Filters.Authentication</filter-class>
    </filter>
    <filter>
        <filter-name>AdminAuthorization</filter-name>
        <filter-class>DT.Filters.AdminAuthorization</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Authentication</filter-name>
        <url-pattern>/logged-in/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAuthorization</filter-name>
        <url-pattern>/logged-in/administration/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>logged-in/index.xhtml</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>postgreSQL Datasource</description>
        <res-ref-name>psk</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
