<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <navigation-rule>  
        <description>register new user</description>  
        <from-view-id>/user-registration.xhtml</from-view-id>  
        <navigation-case>  
            <from-action>#{registrationBean.register}</from-action>  
            <from-outcome>registrationSuccesful</from-outcome>  
            <to-view-id>/registration-succesful.xhtml</to-view-id>  
        </navigation-case>  
        <navigation-case>  
            <from-action>#{registrationBean.register}</from-action>  
            <from-outcome>registrationUnsuccesful</from-outcome>  
            <to-view-id>/registration-unsuccesful.xhtml</to-view-id>  
        </navigation-case>   
    </navigation-rule>
    
</faces-config>
